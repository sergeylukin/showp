{
  "connection": "default",
  "collectionName": "tips",
  "info": {
    "name": "tip",
    "description": "Yay Tips!"
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "minLength": 10,
      "required": true,
      "unique": true,
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "content": {
      "minLength": 10,
      "required": true,
      "type": "richtext"
    },
    "locale": {
      "model": "locale",
      "via": "tips"
    },
    "slug": {
      "type": "string"
    },
    "description": {
      "maxLength": 160,
      "type": "text",
      "required": true
    },
    "author": {
      "model": "user",
      "via": "tips",
      "plugin": "users-permissions"
    },
    "tip": {
      "model": "tip"
    },
    "publish_datetime": {
      "type": "date",
      "required": true
    },
    "isPublished": {
      "enum": [
        "No",
        "Yes"
      ],
      "type": "enumeration",
      "required": true
    }
  }
}